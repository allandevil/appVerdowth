<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="5"
        android:onClick="onClickTenho">

        <TextView
            android:text="Tenho terra"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/imageButton2"
            android:textColor="#8bc34a"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:elevation="18dp"
            android:background="#FFF" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:src="@drawable/tenho_terreno"
            android:id="@+id/imageButton2"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="onClickTrabalho"
        android:weightSum="5">

        <TextView
            android:text="Trabalhar"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:id="@+id/textView6"
            android:layout_alignBottom="@+id/imageButton2"
            android:textColor="#8bc34a"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30sp"
            android:background="#fff"
            android:textStyle="normal|bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:src="@drawable/quero_trabalhar"
            android:id="@+id/plantar_btn"
            android:scaleType="centerCrop"/>

    </LinearLayout>


</LinearLayout>